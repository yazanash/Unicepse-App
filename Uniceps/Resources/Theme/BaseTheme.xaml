<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========== COLORS (keys only) ========== -->
    <!--<Color x:Key="Color.Primary" />
    <Color x:Key="Color.OnPrimary" />
    <Color x:Key="Color.Secondary" />
    <Color x:Key="Color.OnSecondary" />
    <Color x:Key="Color.Background" />
    <Color x:Key="Color.Surface" />
    <Color x:Key="Color.Card" />
    <Color x:Key="Color.Foreground" />-->


    <!-- ========== BRUSHES ========== -->
    <!--<SolidColorBrush x:Key="Brush.Primary"     Color="{DynamicResource Color.Primary}" />
    <SolidColorBrush x:Key="Brush.OnPrimary"     Color="{DynamicResource Color.OnPrimary}" />
    <SolidColorBrush x:Key="Brush.Secondary"   Color="{DynamicResource Color.Secondary}" />
    <SolidColorBrush x:Key="Brush.OnSecondary"   Color="{DynamicResource Color.OnSecondary}" />
    <SolidColorBrush x:Key="Brush.Background"  Color="{DynamicResource Color.Background}" />
    <SolidColorBrush x:Key="Brush.Surface"  Color="{DynamicResource Color.Surface}" />
    <SolidColorBrush x:Key="Brush.Card"        Color="{DynamicResource Color.Card}" />
    <SolidColorBrush x:Key="Brush.Foreground"  Color="{DynamicResource Color.Foreground}" />

    --><!-- Borders --><!--
    <SolidColorBrush x:Key="Brush.Border" />
    <Thickness x:Key="BorderThickness.Main" />

    --><!-- Corner Radiuses --><!--
    <CornerRadius x:Key="Radius.Small" />
    <CornerRadius x:Key="Radius.Medium" />
    <CornerRadius x:Key="Radius.Large" />


    --><!-- ========== GLOBAL FONT ========== --><!--
    <FontFamily x:Key="Cairo">pack://application:,,,/Resources/Fonts/Cairo/#Cairo</FontFamily>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Cairo}" />
        --><!--<Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}" />--><!--
    </Style>

    <Style x:Key="CardBorderStyle" TargetType="Border">
        --><!-- الخلفية --><!--
        <Setter Property="Background" Value="{DynamicResource Brush.Card}" />
        --><!-- البوردر --><!--
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="{DynamicResource BorderThickness.Main}" />
        --><!-- الزوايا --><!--
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Small}" />
        --><!-- البادينغ الداخلي --><!--
        <Setter Property="Padding" Value="5" />

    </Style>
    <Style x:Key="StaticCardBorderStyle" TargetType="Border">
        --><!-- الخلفية --><!--
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}" />
        --><!-- البوردر --><!--
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        --><!-- الزوايا --><!--
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Small}" />
        --><!-- البادينغ الداخلي --><!--
        <Setter Property="Padding" Value="5" />

    </Style>-->
</ResourceDictionary>