<UserControl x:Class="Uniceps.Views.AppViews.GymView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.AppViews"
             mc:Ignorable="d" 
              xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
               xmlns:converters="clr-namespace:Uniceps.utlis.Converters"
             FlowDirection="RightToLeft"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibalityConverter x:Key="InverseBooleanToVisibalityConverter"/>

    </UserControl.Resources>
    <Border CornerRadius="5" Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Page body-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Gym Profile-->
                <Border  Margin="5" Style="{DynamicResource CardBorderStyle}">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border FlowDirection="LeftToRight" Grid.Column="1"
                            Margin="0 0 15 5"
                        Padding="10"
                         BorderThickness="0" >
                            <StackPanel HorizontalAlignment="Left" Visibility="{Binding HasProfile,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BoolToVis}}" >
                                <Grid>
                                    <Image Stretch="Uniform" Source="{Binding ProfilePicture,UpdateSourceTrigger=PropertyChanged}" 
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                         Height="100" Width="100"                  RenderOptions.EdgeMode="Aliased"/>
                                    <Image Stretch="Uniform" Source="/Resources/Assets/pro-thump.png" 
     RenderOptions.BitmapScalingMode="HighQuality" Visibility="{Binding HasProfilePicture,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource InverseBooleanToVisibalityConverter}}" 
          Height="100" Width="100"                  RenderOptions.EdgeMode="Aliased"/>
                                </Grid>

                                <Button Style="{DynamicResource AddBtn}" Margin="0 10 " Command="{Binding UploadProfilePictureCommand}" >
                                    <Grid>
                                       
                                        <custom:LoadingSpinner
IsLoading="{Binding IsLoading}"
Diameter="25" Thickness="2" Color="{DynamicResource Brush.OnPrimary}" />
                                        <Grid Visibility="{Binding IsLoading ,Converter={StaticResource InverseBooleanToVisibalityConverter}}">
                                            <TextBlock Text="تغيير الصورة الشخصية"/>
                                        </Grid>
                                    </Grid>
                                </Button>
                            </StackPanel>

                        </Border>

                        <Grid HorizontalAlignment="Stretch" Grid.Column="0" Margin="5" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Style="{DynamicResource StaticCardBorderStyle}" Margin="0 0 0 10" Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="/Resources/Assets/logo_white.png" Width="50"/>
                                    <StackPanel HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" Margin="10 0">
                                        <TextBlock  Foreground="{DynamicResource Brush.Foreground}" Margin="0 0 0 5" FontSize="18" Text="{Binding PlanName,UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBlock  Foreground="{DynamicResource Brush.Foreground}" Margin="0 0 0 5" FontSize="18"  Grid.Column="1" Text="{Binding Price,UpdateSourceTrigger=PropertyChanged}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                                            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource Brush.Foreground}"  FontSize="18" Text="{Binding StartDate,UpdateSourceTrigger=PropertyChanged}"/>
                                            <Icon:PackIconMaterial Margin="10 0" Kind="ArrowLeft" VerticalAlignment="Center" Foreground="{DynamicResource Brush.Foreground}"/>
                                            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource Brush.Foreground}" Margin="5 0" FontSize="18"  Grid.Column="1" Text="{Binding EndDate,UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Grid.Column="2" CornerRadius="50" Width="50" Height="50" Style="{DynamicResource CardBorderStyle}">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding DaysLeft}" Foreground="{DynamicResource Brush.Foreground}" FontSize="14"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Row="1">
                                <TextBlock  Foreground="{DynamicResource Brush.Foreground}" FontSize="14" Margin="0 0 10 0" FontWeight="Bold" Grid.Column="0" Text=" الاسم التجاري : "/>
                                <TextBox  Style="{DynamicResource textBoxStyle}" Grid.Column="1" Text="{Binding Name,UpdateSourceTrigger=PropertyChanged }"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2">
                                <TextBlock  Foreground="{DynamicResource Brush.Foreground}" FontSize="14" Margin="0 0 10 0" FontWeight="Bold" Grid.Column="0" Text="رقم الجوال : "/>
                                <TextBox  Style="{DynamicResource textBoxStyle}" Grid.Column="1" Text="{Binding Phone,UpdateSourceTrigger=PropertyChanged }"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3">
                                <TextBlock  Foreground="{DynamicResource Brush.Foreground}" FontSize="14" Margin="0 0 10 0"  FontWeight="Bold" Grid.Column="0" Text="المالك :"/>
                                <TextBox  Style="{DynamicResource textBoxStyle}"  Text="{Binding OwnerName,UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="4">
                                <TextBlock Grid.Row="3" Foreground="{DynamicResource Brush.Foreground}" FontSize="14" Margin="0 0 10 0" FontWeight="Bold" Grid.Column="0" Text="العنوان :"/>
                                <TextBox  Style="{DynamicResource textBoxStyle}" Text="{Binding Address,UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <Button Style="{DynamicResource AddBtn}" Margin="0 10 " Grid.Row="6" Command="{Binding UpdateProfileCommand}" Content="حفظ التغييرات"/>
                        </Grid>
                    </Grid>
                </Border>
                <!--Unicepse app-->
                <Border  Margin="5" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Style="{DynamicResource CardBorderStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Visible">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="10" >
                            <Border FlowDirection="LeftToRight" Grid.Column="0" HorizontalAlignment="Center"
                            Margin="0 0 15 5"
                        Padding="5"
                         BorderThickness="0" >

                                <Image Stretch="Uniform" Source="../../Resources/Assets/logo.png" 
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                Height="100" Width="100"         RenderOptions.EdgeMode="Aliased"/>
                            </Border>
                            <StackPanel >
                                <TextBlock Text="تطبيق يونيسيبس لادارة الاندية الرياضية" Foreground="{DynamicResource Brush.Foreground}" FontWeight="Bold" HorizontalAlignment="Center" FontSize="20" />
                                <StackPanel >
                                    <TextBlock  Text="معلومات الاصدار"  FontSize="18" Foreground="{DynamicResource Brush.Foreground}"/>
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock Text="الاصدار الحالي : " FontWeight="Bold" Foreground="{DynamicResource Brush.Foreground}" FontSize="14" />
                                        <TextBlock Text="{Binding Version,UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource Brush.Foreground}" FontSize="14" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="تاريخ الاصدار : " FontWeight="Bold" Foreground="{DynamicResource Brush.Foreground}" FontSize="14" />
                                        <TextBlock Text="11/08/2024" Foreground="{DynamicResource Brush.Foreground}" FontSize="14" />
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel >
                                    <TextBlock Text="المطورون :" Foreground="{DynamicResource Brush.Foreground}" FontSize="18"  />
                                    <TextBlock Text="بواسطة شركة تريوفيرس - Trioverse لنظم المعلومات " Foreground="{DynamicResource Brush.Foreground}" FontWeight="Bold" FontSize="14" />
                                </StackPanel>
                                <StackPanel >
                                    <TextBlock  Text="روابط الدعم" Foreground="{DynamicResource Brush.Foreground}" FontSize="18"  />
                                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" >
                                    <Hyperlink  Foreground="{DynamicResource Brush.Foreground}" NavigateUri="https://trio-verse.com/uniceps/tech" RequestNavigate="Hyperlink_RequestNavigate">
                                        صفحة الدعم التقني
                                    </Hyperlink>
                                    </TextBlock>
                                    <TextBlock  FontWeight="Bold" Foreground="{DynamicResource Brush.Foreground}" FontSize="12">
                                    <Hyperlink Foreground="{DynamicResource Brush.Foreground}" NavigateUri="https://trio-verse.com/uniceps/faq" RequestNavigate="Hyperlink_RequestNavigate">
                                       الاسئلة الشائعة
                                    </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel >
                                    <TextBlock Text="الخصوصية والاستخدام" Foreground="{DynamicResource Brush.Foreground}"  FontSize="18"  />
                                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  FontSize="12" FontWeight="Bold">
                                    <Hyperlink Foreground="{DynamicResource Brush.Foreground}" NavigateUri="https://trio-verse.com/uniceps/privacy" RequestNavigate="Hyperlink_RequestNavigate">
                                        شروط الاستخدام
                                    </Hyperlink>
                                    </TextBlock>
                                    <TextBlock Foreground="{DynamicResource Brush.Foreground}" FontSize="12" FontWeight="Bold">
                                    <Hyperlink Foreground="{DynamicResource Brush.Foreground}" NavigateUri="https://trio-verse.com/uniceps/terms" RequestNavigate="Hyperlink_RequestNavigate">
                                        سياسة الخصوصية
                                    </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

        </Grid>
    </Border>

</UserControl>
