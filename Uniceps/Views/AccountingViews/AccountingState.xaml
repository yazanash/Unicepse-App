<UserControl x:Class="Uniceps.Views.AccountingViews.AccountingState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.AccountingViews"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:Uniceps.Components"
             Background="Transparent"
             xmlns:converters="clr-namespace:Uniceps.utlis.Converters" 
             xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
             mc:Ignorable="d" 
             FlowDirection="RightToLeft"
             xmlns:vus="clr-namespace:Uniceps.utlis.Components"
              xmlns:vms="clr-namespace:Uniceps.ViewModels.Accountant"
             xmlns:views="clr-namespace:Uniceps.Views.AccountingViews"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibalityConverter x:Key="InverseBooleanToVisibalityConverter"/>
        <converters:NumberFormatConverter x:Key="convertNum"/>
        <DataTemplate DataType="{x:Type vms:ExpensesCardViewModel }">
            <views:ExpensesCardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:PaymentsCardViewModel }">
            <views:PaymentsCardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:CreditsCardViewModel }">
            <views:CreditsCardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:SubscriptionCardViewModel }">
            <views:SubscriptionsCardView/>
        </DataTemplate>
    </UserControl.Resources>
    <Border>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Margin="5 0" Grid.RowSpan="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0"  Grid.ColumnSpan="3" Grid.Row="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                                <TextBlock Text="التاريخ" Foreground="{DynamicResource Brush.Foreground}" Margin="0 0 20 0" FontSize="16" VerticalAlignment="Center" DockPanel.Dock="Top"/>
                                <DatePicker 
                                    SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}"
                                   />

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <RadioButton GroupName="card" Grid.Column="0" Command="{Binding SubscriptionsCommand}" Style="{StaticResource CradBarButtonRD}"  IsChecked="True"   >
                            <StackPanel Orientation="Horizontal">

                                <Icon:PackIconMaterial Kind="AccountGroup" HorizontalAlignment="Right"  Foreground="{DynamicResource Brush.Primary}"  Width="40" Height="40" VerticalAlignment="Center" Margin="10"/>
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock 
                Text="الاشتراكات" FontWeight="Heavy" FontSize="16" HorizontalAlignment="Right"/>
                                    <TextBlock Margin="0 0 0 10"
                       TextAlignment="Left" Text="{Binding SubscriptionsCard,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" FontWeight="DemiBold" FontSize="30" />
                                    <!--<Icon:PackIconMaterial Kind="ArrowUpCircleOutline" HorizontalAlignment="Left" Height="20" Width="20" RotationAngle="45" Foreground="#aaa"/>-->

                                </StackPanel>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton GroupName="card" Grid.Column="1" Command="{Binding CreditsCommand}" Style="{StaticResource CradBarButtonRD}"   >
                            <StackPanel Orientation="Horizontal">

                                <Icon:PackIconMaterial Kind="CashRefund" HorizontalAlignment="Right"  Foreground="{DynamicResource Brush.Primary}" Width="40" Height="40" VerticalAlignment="Center" Margin="10"/>
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock 
                Text="المدفوعات"
                 FontWeight="Heavy" FontSize="16" HorizontalAlignment="Right"/>
                                    <TextBlock Margin="0 0 0 10"
                       TextAlignment="Left" Text="{Binding CreditsCard,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" FontWeight="DemiBold" FontSize="30" />
                                    <!--<Icon:PackIconMaterial Kind="ArrowUpCircleOutline" HorizontalAlignment="Left" Height="20" Width="20" RotationAngle="45" Foreground="#aaa"/>-->

                                </StackPanel>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton GroupName="card" Grid.Column="2" Command="{Binding IncomeCommand}" Style="{StaticResource CradBarButtonRD}">
                            <StackPanel Orientation="Horizontal">

                                <Icon:PackIconMaterial Kind="CashPlus" HorizontalAlignment="Right" Foreground="{DynamicResource Brush.Primary}" Width="40" Height="40" VerticalAlignment="Center" Margin="10"/>
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock 
                Text="الايرادات" FontWeight="Heavy" FontSize="16" HorizontalAlignment="Right"/>
                                    <TextBlock Margin="0 0 0 10"
                       TextAlignment="Left" Text="{Binding PaymentsCard,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" FontWeight="DemiBold" FontSize="30" Foreground="{DynamicResource Brush.Primary}" />
                                    <!--<Icon:PackIconMaterial Kind="ArrowUpCircleOutline" HorizontalAlignment="Left" Height="20" Width="20" RotationAngle="45" Foreground="#aaa"/>-->

                                </StackPanel>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton GroupName="card" Grid.Column="3" Command="{Binding ExpensesCommand}"  Style="{StaticResource CradBarButtonRD}">
                            <StackPanel Orientation="Horizontal">

                                <Icon:PackIconMaterial Kind="CashMinus" HorizontalAlignment="Right" Foreground="{DynamicResource Brush.Primary}" Width="40" Height="40" VerticalAlignment="Center" Margin="10"/>
                                <StackPanel HorizontalAlignment="Left">
                                    <TextBlock 
                Text="المصاريف" FontWeight="Heavy" FontSize="16" HorizontalAlignment="Right"/>
                                    <TextBlock Margin="0 0 0 10"
                       TextAlignment="Left" Text="{Binding ExpensesCard,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" FontWeight="DemiBold" FontSize="30" Foreground="{DynamicResource Brush.Primary}" />
                                    <!--<Icon:PackIconMaterial Kind="ArrowUpCircleOutline" HorizontalAlignment="Left" Height="20" Width="20" RotationAngle="45" Foreground="#aaa"/>-->

                                </StackPanel>
                            </StackPanel>
                        </RadioButton>
                    </Grid>
                </Border>




                <Border Style="{DynamicResource StaticCardBorderStyle}" Grid.ColumnSpan="3" Grid.Row="3" Margin="5 10">
                    <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
 