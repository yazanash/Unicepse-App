<Window x:Class="Uniceps.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views"
         WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
         xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
             FlowDirection="RightToLeft"
        mc:Ignorable="d"
          xmlns:converters="clr-namespace:Uniceps.utlis.Converters"
       PreviewKeyDown="UserControl_PreviewKeyDown"
        Background="Transparent"
        Title="LicenseWindow" Width="500" Height="450">
   
    <Window.Resources>
        <converters:InverseBooleanToVisibalityConverter x:Key="InverseBooleanToVisibalityConverter"/>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </Window.Resources>
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="{DynamicResource Brush.Surface}"  Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="اهلا بك " Style="{StaticResource textTitle}" Foreground="{DynamicResource Brush.Foreground}"/>
                    <TextBlock Text="تسجيل الدخول" Style="{StaticResource normalText}" Margin="0 10 0 15" Foreground="{DynamicResource Brush.Foreground}"/>
                    <Border Style="{DynamicResource CardBorderStyle}" Margin=" 70 7">
                        <Grid Margin="9 7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <icons:PackIconMaterial Kind="EmailOutline" Foreground="{DynamicResource Brush.Foreground}" Width="20" Height="20"/>
                            <TextBlock Text="ادخل البريد الالكتروني" Style="{StaticResource hintText}"
                                    x:Name="lbl_username"
                                     MouseDown="email_MouseDown"/>
                            <TextBox x:Name="email_txt" IsReadOnly="{Binding IsOTPRequested}"
                                   Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                   TextChanged="email_txt_TextChanged" TabIndex="0"
                                   Style="{StaticResource loginTextbox}" />
                        </Grid>
                    </Border>

                    <Border Style="{DynamicResource CardBorderStyle}"  Visibility="{Binding IsOTPRequested,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource boolToVis}}"  Margin=" 70 7">
                        <Grid Margin="9 7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <icons:PackIconMaterial Kind="LockOutline" Foreground="{DynamicResource Brush.Foreground}" Width="20" Height="20"/>
                            <TextBlock x:Name="lbl_password" Text="ادخل رمز التحقق " Style="{StaticResource hintText}"
                                    MouseDown="password_MouseDown" />
                            <TextBox x:Name="password_txt" TabIndex="1" TextChanged="password_txt_TextChanged" Text="{Binding OTP, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource loginTextbox}" />
                        </Grid>
                    </Border>
                    <TextBlock Text="{Binding ErrorMessage,UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Center" FontSize="15" Foreground="Green"/>
                    <Button x:Name="verify_btn" Command="{Binding RequestOTPCommand}" Style="{StaticResource signinBtn}">
                        <Grid>
                            <custom:LoadingSpinner
         IsLoading="{Binding IsLoading}"
         Diameter="40" Thickness="2" Color="{DynamicResource Brush.OnPrimary}" />
                            <Grid Visibility="{Binding IsLoading ,Converter={StaticResource InverseBooleanToVisibalityConverter}}">
                                <TextBlock Text="تسجيل"/>
                            </Grid>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>



</Window>
