<UserControl x:Class="Uniceps.Views.RoutineTemplateViews.RoutineComponent.RoutineItemModelCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.RoutineTemplateViews.RoutineComponent"
             mc:Ignorable="d" 
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
            >
    <Border Padding="10" Margin="10" Background="#fff" CornerRadius="10" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Width="200" Grid.Row="0"
        Source="{Binding ExerciseImage,UpdateSourceTrigger=PropertyChanged}"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.EdgeMode="Aliased"
        Height="100" DockPanel.Dock="Top"/>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="{Binding ExerciseName,UpdateSourceTrigger=PropertyChanged}" FontSize="16" FontWeight="ExtraBold"/>
           
           
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <TextBlock Text="المجموعات التدريبية" FontSize="14" />
                    <Button Grid.Row="2" HorizontalAlignment="Center" Grid.Column="2" Command="{Binding AddSetModelCommand}" Style="{StaticResource IconBtn}">
                        <icon:PackIconMaterial Foreground="{StaticResource colors.primary}" Kind="Plus" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>

            <ListView  BorderThickness="0" VirtualizingPanel.ScrollUnit="Pixel"  Grid.Row="3" ItemsSource="{Binding SetModelItems}"  ItemContainerStyle="{StaticResource SetModelsListBoxItemContainerStyle1}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
                <!--<DataGrid Grid.Row="2" Grid.Column="0" FlowDirection="RightToLeft" ItemsSource="{Binding SetModelItems}" 
CanUserReorderColumns="True" 
x:Name="PlayerDataGrid" Style="{DynamicResource DataGridStyle1}" 
CellStyle="{DynamicResource DataGridCellStyle1}" 
ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="رقم الجولة" IsReadOnly="True"
Width="auto"
Binding="{Binding RoundIndex}"
CanUserResize="False"/>

                        <DataGridTextColumn Header="العدات" IsReadOnly="True"
 Binding="{Binding Repetition}"
Width="auto"
/>
                    </DataGrid.Columns>
                </DataGrid>-->
            
           
        </Grid>
    </Border>
</UserControl>
