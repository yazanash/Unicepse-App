<Window x:Class="Uniceps.Views.RoutineTemplateViews.RoutineComponent.RoutineItemModelCardWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views.RoutineTemplateViews.RoutineComponent"
        mc:Ignorable="d"
                     xmlns:Comp="clr-namespace:Uniceps.utlis.Components"
xmlns:converters="clr-namespace:Uniceps.utlis.Converters"
          xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="{DynamicResource Brush.Background}"
        Title="أضافة جولات" Height="450" Width="600">
    <Window.InputBindings>
        <!-- زر Up يحرك العنصر المحدد للأعلى -->
        <KeyBinding Key="Up" Modifiers="Alt"
          Command="{Binding MoveUpCommand}"
          CommandParameter="{Binding SelectedSetModelItem}" />

        <!-- زر Down يحرك العنصر المحدد للأسفل -->
        <KeyBinding Key="Down" Modifiers="Alt"
          Command="{Binding MoveDownCommand}"
          CommandParameter="{Binding SelectedSetModelItem}" />
    </Window.InputBindings>
    <Window.Resources>
        <converters:InverseBooleanToVisibalityConverter x:Key="InverseBooleanToVisibalityConverter"/>
        <Style x:Key="SetModelsListBoxItemContainerStyle1" TargetType="{x:Type ListBoxItem}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="VerticalContentAlignment" Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">

                        <Border Style="{DynamicResource StaticCardBorderStyle}" x:Name="Bd"  Margin="5" >

                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>


                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <TextBlock FontSize="16" Foreground="{DynamicResource Brush.Foreground}" FontWeight="Bold"
                                     Text="{Binding RoundIndex ,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"  HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock FontSize="16" Margin="5 0" Foreground="{DynamicResource Brush.Foreground}" FontWeight="Bold"
       Text="-" VerticalAlignment="Center"  HorizontalAlignment="Left"></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="5">
                                    <TextBlock FontSize="16" Foreground="{DynamicResource Brush.Foreground}" FontWeight="Bold"
   Text="العد :" VerticalAlignment="Center"  HorizontalAlignment="Center"></TextBlock>

                                    <TextBox FontSize="16" Margin="5 0" Style="{DynamicResource textBoxStyle}" FontWeight="Bold"
   Text="{Binding Repetition,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"  HorizontalAlignment="Center"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Column="2">
                                    <Button Command="{Binding DeleteCommand}" CommandParameter="{Binding Id}" Margin="5" Style="{StaticResource IconBtn}" FontSize="12"  Grid.Column="0" Grid.Row="4" >
                                        <icon:PackIconMaterial Kind="TrashCan" Foreground="Red"/>
                                    </Button>
                                </StackPanel>
                                <!-- Popup for Editing -->
                                 </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource Brush.Card}"/>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                    <Condition Property="IsSelected" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource Brush.Card}"/>
                                <Setter Property="BorderBrush" TargetName="Bd" Value="{DynamicResource Brush.Primary}"/>

                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                    <Condition Property="IsSelected" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource Brush.Card}"/>
                                <Setter Property="BorderBrush" TargetName="Bd" Value="{DynamicResource Brush.Primary}"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="TextElement.Foreground" TargetName="Bd" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </Window.Resources>
    <Border Style="{DynamicResource StaticCardBorderStyle}" >
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image Width="200" Grid.Row="0"
Source="{Binding ExerciseImage,UpdateSourceTrigger=PropertyChanged}"
RenderOptions.BitmapScalingMode="HighQuality"
RenderOptions.EdgeMode="Aliased"
Height="200" DockPanel.Dock="Top"/>
                <TextBlock Grid.Row="1" HorizontalAlignment="Center" Foreground="{DynamicResource Brush.Foreground}" Text="{Binding ExerciseName,UpdateSourceTrigger=PropertyChanged}" FontSize="16" FontWeight="ExtraBold"/>

            </Grid>
          
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="المجموعات التدريبية" VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource Brush.Foreground}"/>
                    <Button Grid.Row="2" HorizontalAlignment="Center" Grid.Column="2" Command="{Binding AddSetModelCommand}" Style="{StaticResource IconBtn}">
                        <icon:PackIconMaterial Kind="Plus" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button 
Command="{Binding MoveUpCommand}" ToolTip="Alt + Up "
CommandParameter="{Binding SelectedSetModelItem}" Style="{DynamicResource BorderedIconBtn}">
                        <icon:PackIconMaterial Kind="ArrowUp"/>
                    </Button>
                    <Button 
Command="{Binding MoveDownCommand}" ToolTip="Alt + Down" Margin="2 0"
CommandParameter="{Binding SelectedSetModelItem}"  Style="{DynamicResource BorderedIconBtn}">
                        <icon:PackIconMaterial Kind="ArrowDown"/>
                    </Button>
                    <Button Grid.Column="2" Grid.Row="1" Visibility="{Binding HasOrderChanged,Converter={StaticResource boolToVis}}" Command="{Binding SaveNewOrderCommand}" Style="{StaticResource BorderedIconBtn}">
                        <TextBlock Text="حفظ ترتيب الجولات"/>
                    </Button>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Grid.Column="2" Grid.Row="1"  Command="{Binding SaveAllCommand}" Style="{StaticResource BorderedIconBtn}">
                        <TextBlock Text="حفظ التغييرات"/>
                    </Button>
                </StackPanel>
            </Grid>

            <ListView x:Name="DayGroupList"
                       PreviewKeyDown="DayGroupList_PreviewKeyDown" Grid.Column="1" Background="Transparent" SelectedItem="{Binding SelectedSetModelItem}" BorderThickness="0" VirtualizingPanel.ScrollUnit="Pixel"  Grid.Row="4" ItemsSource="{Binding SetModelItems}"  ItemContainerStyle="{StaticResource SetModelsListBoxItemContainerStyle1}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Comp:CaptinUniTRainerForEmpty Visibility="{Binding HasData,Converter={StaticResource InverseBooleanToVisibalityConverter}}" Grid.Column="1" Grid.Row="4" Title="لا يوجد جولات بعد" 
             Caption="اضغط على زر + لاضافة جولات لهذا التمرين"/>


        </Grid>
    </Border>
</Window>
