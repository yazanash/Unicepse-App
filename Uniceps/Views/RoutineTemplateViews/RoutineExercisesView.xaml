<UserControl x:Class="Uniceps.Views.RoutineTemplateViews.RoutineExercisesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.RoutineTemplateViews"
             mc:Ignorable="d" 
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
              xmlns:routinecomponent="clr-namespace:Uniceps.Views.RoutineTemplateViews.RoutineComponent"
              xmlns:cs="clr-namespace:Uniceps.Components"
             FlowDirection="RightToLeft"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border >
        <routinecomponent:ExercisesListView Grid.Row="2"  
                                            DataContext="{Binding ExercisesListViewModel}"
                                            SelectedItem="{Binding SelectedExerciseViewModel}"
                                            UnSelectedItem="{Binding UnSelectedExerciseViewModel}"
                                            ExerciseSelectedCommand="{Binding ExerciseSelectedCommand}"
                                            ExerciseUnSelectedCommand="{Binding ExerciseUnSelectedCommand}"/>
    </Border>
        
</UserControl>
