<UserControl x:Class="Uniceps.Views.Expenses.ExpansesDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.Expenses"
             mc:Ignorable="d" 
             xmlns:converters="clr-namespace:Uniceps.utlis.Converters"
               xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             FlowDirection="RightToLeft"
            >
    <UserControl.Resources>
        <converters:NumberFormatConverter x:Key="convertNum"/>
    </UserControl.Resources>
    <Border  Padding="5" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="2" Padding="5" Margin="0 0 0 5" >
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                        <Icon:PackIconMaterial Kind="ArrowRight" Foreground="{DynamicResource Brush.Foreground}" Width="20" Height="20" Margin="0 0 15 0" VerticalAlignment="Center"/>
                        <TextBlock Text="المصاريف / تسجيل مصروف" Foreground="{DynamicResource Brush.Foreground}" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>

                </DockPanel>
            </Border>


            <Grid Grid.Row="1" >

                <Border HorizontalAlignment="Left" Grid.Column="0"  Grid.Row="0" Style="{DynamicResource CardBorderStyle}" Margin="5">
                    <DockPanel HorizontalAlignment="Center" Width="800" >
                        <DockPanel DockPanel.Dock="Top" >
                            <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="معلومات المصروف"  FontSize="24" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Margin="5">
                                <TextBlock Text="بيان المصروف" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="18"/>
                                <TextBox Text="{Binding Descriptiones, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel Grid.Row="1"  Grid.Column="0" Margin="5">
                                <TextBlock Text="قيمة المصروف" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="18"/>
                                <TextBox Text="{Binding ExpensesValue, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum }}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>
                            <StackPanel Grid.Row="1"  Grid.Column="1" Margin="5">
                                <TextBlock Text="تاريخ المصروف" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="18"/>
                                <DatePicker 
                                    SelectedDate="{Binding ExpensesDate, UpdateSourceTrigger=PropertyChanged}"
                                   />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="0 20 0 0" HorizontalAlignment="Right">
                                <Button Command="{Binding SubmitCommand}" Style="{StaticResource FormButton}" Width="200" Grid.Column="0" Grid.Row="4"  Content="حفظ"  HorizontalAlignment="Right">
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Margin="0 20 0 0" HorizontalAlignment="Left">
                                <Button Command="{Binding CancelCommand}" Style="{StaticResource ScFormButton}" Width="200"  Content="الغاء"/>
                            </StackPanel>
                        </Grid>

                    </DockPanel>
                </Border>


            </Grid>
        </Grid>
    </Border>
</UserControl>
