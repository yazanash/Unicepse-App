<Window x:Class="Uniceps.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Normal"
        Background="Transparent"
        FlowDirection="RightToLeft"
        mc:Ignorable="d" Width="500" Height="300">
    <Border Margin="5" Background="{DynamicResource Brush.Card}" CornerRadius="{DynamicResource Radius.Medium}" Padding="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10">
            <Border FlowDirection="LeftToRight" Grid.Column="0" HorizontalAlignment="Center"
                            Margin="0 0 0 5"
                        Padding="5"
                         BorderThickness="0" >

                <Image Stretch="Uniform" Source="../Resources/Assets/logo.png" 
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                Height="100" Width="100"         RenderOptions.EdgeMode="Aliased"/>


            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Uniceps" FontWeight="Bold"  VerticalAlignment="Center" FontSize="20" Foreground="{DynamicResource Brush.Foreground}"/>
               
            </StackPanel>
            <StackPanel >
                <TextBlock Text="{Binding Message,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Left" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource Brush.Foreground}"/>
                <ProgressBar IsIndeterminate="{Binding IsLoading,UpdateSourceTrigger=PropertyChanged}" Margin="0 10" Value="{Binding Progress,UpdateSourceTrigger=PropertyChanged}" Height="5" Foreground="{DynamicResource Brush.Primary}" Background="#fff"/>
                <TextBlock Foreground="{DynamicResource Brush.Foreground}" HorizontalAlignment="Center" Text="Powered by Trioverse" FontWeight="Bold" FontSize="14" />
            </StackPanel>
        </StackPanel>
    </Border>

</Window>
