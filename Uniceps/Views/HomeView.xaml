<UserControl x:Class="Uniceps.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views"
             mc:Ignorable="d" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:Uniceps.Components"
             xmlns:sb="clr-namespace:Uniceps.utlis.Components"
             Background="Transparent"
             xmlns:converters="clr-namespace:Uniceps.utlis.Converters" 
             xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
             FlowDirection="RightToLeft"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibalityConverter x:Key="InverseBooleanToVisibalityConverter"/>
        <converters:NumberFormatConverter x:Key="convertNum"/>
    </UserControl.Resources>
    <Border  Padding="5">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Grid.RowSpan="2" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Margin="5"  Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <!--<ColumnDefinition Width="300"/>-->
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="التاريخ" VerticalAlignment="Center" FontSize="15" Foreground="{DynamicResource Brush.Foreground}"/>
                            <DatePicker VerticalAlignment="Center" SelectedDate="{Binding SelectedDate,UpdateSourceTrigger=PropertyChanged}" Margin="10 0"/>
                        </StackPanel>
                        

                        <Button Grid.Column="1" Margin="5 0"   Command="{Binding OpenScanCommand}"  FlowDirection="LeftToRight"  Style="{StaticResource AddBtn}">

                            <StackPanel  Orientation="Horizontal">
                                <TextBlock  FlowDirection="RightToLeft" Text="مسح QR Code" />
                                <Icon:PackIconMaterial Kind="QrcodeScan"
                                       Margin="8 0 0 1"
                                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                        </Button>
                    </Grid>
                </Border>
                <Border Style="{DynamicResource CardBorderStyle}" Grid.ColumnSpan="3" Grid.Row="3" Margin="5" >
                    
                    <DockPanel>

                        <Grid >
                            <custom:LoadingSpinner
                IsLoading="{Binding IsLoading}"
                Diameter="100" Thickness="3" Color="{DynamicResource Brush.Primary}" />
                            <Grid Visibility="{Binding IsLoading ,Converter={StaticResource InverseBooleanToVisibalityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="7*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding ErrorMessage}" HorizontalAlignment="Left" Visibility="{Binding HasErrorMessage , Converter={StaticResource BoolToVis}}" Foreground="Red" Grid.Column="2" Margin="140,0,0,0"/>

                                <DataGrid  SelectedItem="{Binding SelectedDailyPlayerReport,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  Visibility="{Binding HasErrorMessage,Converter={StaticResource InverseBooleanToVisibalityConverter}}"  FlowDirection="RightToLeft" ItemsSource="{Binding PlayerAttendence,UpdateSourceTrigger=PropertyChanged}" x:Name="PlayerDataGrid" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Grid.ColumnSpan="3" Margin="0,16,0,-6">
                                  
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" IsReadOnly="True"
                                    Width="auto"
                                    Binding="{Binding IdSort}"
                                    CanUserResize="False"/>

                                        <DataGridTemplateColumn  Width="auto" IsReadOnly="True">
                                            <DataGridTemplateColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Icon:PackIconMaterial Kind="Key" Style="{StaticResource GridBtnIcon}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.HeaderTemplate>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Visibility="{Binding IsTakenKey,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BoolToVis}}"  ToolTip="رقم المفتاح" Text="{Binding Key,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        
                                        
                                        <DataGridTemplateColumn Header="الاسم" Width="1.2*" IsReadOnly="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Width="10" Height="10" Margin="0 0 0 0" Background="{Binding IsLoggedBrush,UpdateSourceTrigger=PropertyChanged}" CornerRadius="50">
                                                        </Border>
                                                        <TextBlock Margin="10 0 0 0" Text="{Binding PlayerName,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>



                                        <DataGridTextColumn Header="اسم الاشتراك" IsReadOnly="True"
                                     Binding="{Binding SportName,UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"
                                    />
                                        <DataGridTextColumn Header="كود الدخول" IsReadOnly="True"
 Binding="{Binding Code,UpdateSourceTrigger=PropertyChanged}"
Width="*"
/>
                                        <DataGridTextColumn Header="التاريخ" IsReadOnly="True"
                                     Binding="{Binding Date,UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"
                                    />
                                        <DataGridTextColumn Header="وقت الدخول" IsReadOnly="True"
                                     Binding="{Binding loginTime,UpdateSourceTrigger=PropertyChanged}"
                                    Width="auto"
                                    />
                                        <DataGridTextColumn Header="وقت الخروج" IsReadOnly="True"
                                     Binding="{Binding logoutTime,UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"
                                    />
                                        <DataGridTemplateColumn Header="عمليات" Width="140" IsReadOnly="True">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>

                                                    <StackPanel Orientation="Horizontal">

                                                        <Button ToolTip="تسجيل خروج اللاعب" Visibility="{Binding IsLogged,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BoolToVis}}" Command="{Binding LogoutCommand}" Style="{StaticResource GridremoveBtn}">
                                                            <Icon:PackIconMaterial Kind="LogoutVariant"  Style="{StaticResource GridBtnIcon}"/>
                                                        </Button>
                                                        <Button ToolTip="اضافة مفتاح" Visibility="{Binding IsLogged,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BoolToVis}}" Command="{Binding AddKeyCommand}" Style="{StaticResource GridremoveBtn}">
                                                            <Icon:PackIconMaterial Kind="KeyPlus"  Style="{StaticResource GridBtnIcon}"/>
                                                        </Button>
                                                       
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </DockPanel>

                </Border>


            </Grid>

            <!--<Viewbox Margin="5 0" VerticalAlignment="Top" Stretch="Uniform" Grid.Row="0" Grid.Column="1" >
                <Calendar x:Name="calender" Background="{DynamicResource Brush.Card}" Foreground="{DynamicResource Brush.Foreground}" LostFocus="Calendar_LostFocus" SelectedDate="{Binding SelectedDate,UpdateSourceTrigger=PropertyChanged}" CalendarButtonStyle="{DynamicResource CalendarCalendarButtonStyle1}" CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle1}" CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle1}" Style="{DynamicResource CalendarStyle1}" />
            </Viewbox>-->
        </Grid>
    </Border>
</UserControl>
