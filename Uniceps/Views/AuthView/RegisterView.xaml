<UserControl x:Class="Uniceps.Views.AuthView.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.AuthView"
                  xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
  PreviewKeyDown="UserControl_PreviewKeyDown"
             mc:Ignorable="d" 
             FlowDirection="RightToLeft"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>


    </UserControl.Resources>
    <Border Width="800" Height="450" CornerRadius="10" BorderThickness="1" BorderBrush="#787878">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Column="0" Panel.ZIndex="1" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Left">
                <icons:PackIconMaterial Kind="Close" Panel.ZIndex="2" MouseDown="Close_MouseUp" Width="15" Margin="5" Height="15" Foreground="{DynamicResource Brush.Foreground}"/>
                <icons:PackIconMaterial Kind="WindowMinimize" Panel.ZIndex="2" MouseDown="Minimize_MouseUp" Width="15" Margin="5" Height="15" Foreground="{DynamicResource Brush.Foreground}"/>

            </StackPanel>
            <Border CornerRadius="10 0 0 10" Grid.Column="1" FlowDirection="LeftToRight">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{DynamicResource Color.Surface}" Offset="0"/>
                        <GradientStop Color="{DynamicResource Color.Surface}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Canvas>
                        <Polygon Points="0,20 230,140 0,270" Fill="{DynamicResource Brush.Primary}"/>
                        <Polygon Points="100,400 200,370 180,450" Fill="{DynamicResource Brush.Primary}"/>
                        <Ellipse Margin="250 400 0 0" Height="40" Width="40" Fill="{DynamicResource Brush.Primary}" />
                        <Ellipse Margin="50 350 0 0" Height="20" Width="20" Fill="{DynamicResource Brush.Primary}" />
                    </Canvas>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Uniceps" Style="{StaticResource textTitle}" />
                        <TextBlock Text="Join us Now!" Style="{StaticResource normalText}" />
                        <TextBlock Text="Welcome To Our Verse" Style="{StaticResource normalText}" />

                    </StackPanel>
                </Grid>
            </Border>


            <Border Background="{DynamicResource Brush.Surface}" CornerRadius="10 0 0 10" Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="اهلا بك" Style="{StaticResource textTitle}"/>
                    <StackPanel Orientation="Horizontal" Margin="0 20 " HorizontalAlignment="Center">
                        <Button Style="{StaticResource circleBtn}">
                            <icons:PackIconMaterial Kind="Facebook" Width="20" Height="20" Foreground="{DynamicResource Brush.Foreground}"/>
                        </Button>
                        <Button Style="{StaticResource circleBtn}">
                            <icons:PackIconMaterial Kind="Google" Width="20" Height="20" Foreground="{DynamicResource Brush.Foreground}"/>
                        </Button>
                        <Button Style="{StaticResource circleBtn}">
                            <icons:PackIconMaterial Kind="Linkedin" Width="20" Height="20" Foreground="{DynamicResource Brush.Foreground}"/>
                        </Button>
                    </StackPanel>
                    <TextBlock Text="تسجيل جديد" Style="{StaticResource normalText}" Margin="0 10 0 15" Foreground="{DynamicResource Brush.Foreground}"/>
                    <Border Style="{DynamicResource CardBorderStyle}" Margin=" 70 7">
                        <Grid Margin="9 7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <icons:PackIconMaterial Kind="AccountOutline" Foreground="{DynamicResource Brush.Foreground}" Width="20" Height="20"/>
                            <TextBlock Text="اخل اسم المستخدم" Style="{StaticResource hintText}"
                                      x:Name="lbl_username" 
                                       MouseDown="email_MouseDown"/>
                            <TextBox x:Name="email_txt"
                                     Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                                     TextChanged="email_txt_TextChanged" TabIndex="0"
                                     Style="{StaticResource loginTextbox}" />
                        </Grid>
                    </Border>

                    <Border Style="{DynamicResource CardBorderStyle}" Margin=" 70 7">
                        <Grid Margin="9 7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <icons:PackIconMaterial Kind="LockOutline" Foreground="{DynamicResource Brush.Foreground}" Width="20" Height="20"/>
                            <TextBlock x:Name="lbl_password" Text="ادخل كلمة المرور" Style="{StaticResource hintText}"
                                      MouseDown="password_MouseDown" />
                            <PasswordBox x:Name="password_txt" TabIndex="1"
                                         PasswordChanged="password_txt_PasswordChanged" Style="{StaticResource loginPassTextbox}" />
                        </Grid>
                    </Border>
                    <Border Style="{DynamicResource CardBorderStyle}" Margin=" 70 7">
                        <Grid Margin="9 7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <icons:PackIconMaterial Kind="LockOutline" Foreground="{DynamicResource Brush.Foreground}" Width="20" Height="20"/>
                            <TextBlock x:Name="lbl_password_confirm" Text="تاكيد كلمة المرور" Style="{StaticResource hintText}"
                                      MouseDown="lbl_password_confirm_MouseDown" />
                            <PasswordBox x:Name="password_confirm_txt" TabIndex="2" PasswordChanged="password_confirm_txt_PasswordChanged" Style="{StaticResource loginPassTextbox}" />
                        </Grid>
                    </Border>
                    <Button x:Name="sing_btn" Content="تسجيل" Command="{Binding RegisterCommand}" Style="{StaticResource signinBtn}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</UserControl>
