<Window x:Class="Uniceps.Views.AuthView.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views.AuthView"
        xmlns:view="clr-namespace:Uniceps.Views.AuthView"
        xmlns:vm="clr-namespace:Uniceps.ViewModels.Authentication"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowState="Normal"
        Background="Transparent"
        
        Title="AuthWindow" Height="450" Width="800">
    <Window.Resources>
       
        <DataTemplate DataType="{x:Type vm:LoginViewModel }">
            <!--<views:HomeView />-->
            <view:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RegisterViewModel }">
                <!--<views:HomeView />-->
                <view:RegisterView/>
            </DataTemplate>
      
    </Window.Resources>
    <Border Background="Transparent"
            MouseDown="Border_MouseDown"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <ContentControl Content="{Binding CurrentViewModel}" Grid.ColumnSpan="2"/>
    </Border>
</Window>
