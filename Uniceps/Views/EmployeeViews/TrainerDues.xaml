<UserControl x:Class="Uniceps.Views.TrainerViews.TrainerDues"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.TrainerViews"
            xmlns:ctrl="clr-namespace:Uniceps.Controls"
             xmlns:cdr="clr-namespace:Uniceps.utlis.Components"
             mc:Ignorable="d" 
             FlowDirection="RightToLeft"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             d:DesignWidth="800">
    <Border Padding="5" >

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>-->
                <Border Grid.Column="0" Grid.ColumnSpan="2"  Grid.Row="0"  Padding="5"  Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="تاريخ التقرير " Foreground="{DynamicResource Brush.Foreground}" Margin="0 0 20 0" FontSize="20" VerticalAlignment="Center" DockPanel.Dock="Top"/>
                            <DatePicker 
                                    SelectedDate="{Binding ReportDate, UpdateSourceTrigger=PropertyChanged}"
                                   />

                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal"  >
                            <Button Grid.Column="0" Margin="10 0"  Command="{Binding LoadMounthlyReport}"  FlowDirection="LeftToRight"  Style="{StaticResource AddBtn}" HorizontalAlignment="Stretch">

                                <StackPanel Orientation="Horizontal">

                                    <TextBlock Text="تحضير التقرير" />
                                    <Icon:PackIconMaterial Kind="Refresh"
                                       Width="11"
                                       Height="11"
                                       Margin="8 0 0 1"
                                       VerticalAlignment="Center"/>
                                </StackPanel>

                            </Button>
                        <Button Grid.Column="0" Margin="10 0"  Command="{Binding PrintCommand}"  FlowDirection="LeftToRight"  Style="{StaticResource AddBtn}" HorizontalAlignment="Stretch">

                            <StackPanel Orientation="Horizontal">

                                <TextBlock Text="طباعة التقرير" />
                                <Icon:PackIconMaterial Kind="Printer"
                                       Width="11"
                                       Height="11"
                                       Margin="8 0 0 1"
                                       VerticalAlignment="Center"/>
                            </StackPanel>

                        </Button>

                    </StackPanel>
                    </Grid>
                </Border>
                <Border  Grid.Column="0" Grid.Row="1" Margin="5">
                    <DockPanel>
                        <cdr:EmployeeAccountantCard DockPanel.Dock="Top" DataContext="{Binding TrainerMounthlyReportViewModel,UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>

            </Border>

                <!--#region DataList-->
                <Border Grid.Column="1"   Grid.Row="2"  Style="{DynamicResource StaticCardBorderStyle}"  Margin="5">
                    <DockPanel DockPanel.Dock="Top" >
                        <!--<TextBlock Text="الاشتراكات"  HorizontalAlignment="Left" Margin="10" Foreground="{StaticResource colors.primary}" FontSize="18" DockPanel.Dock="Top"/>
                        <Separator Margin="10 5" Background="#ccc" DockPanel.Dock="Top"/>-->
                        <Grid  Grid.Row="3" >

                            <DataGrid  HorizontalAlignment="Stretch"
                                    FlowDirection="RightToLeft" ItemsSource="{Binding  TrainerMounthlyReportViewModel.Details,UpdateSourceTrigger=PropertyChanged}" 
                                    CanUserReorderColumns="True" AutoGenerateColumns="False"
                                    x:Name="PlayerDataGrid" Style="{DynamicResource DataGridStyle1}" 
                                    CellStyle="{DynamicResource DataGridCellStyle1}" 
                                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" >
                                
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" IsReadOnly="True"
                                    Width="auto"
                                    Binding="{Binding Order}"
                                    CanUserResize="False"/>

                                <DataGridTemplateColumn Header="اسم اللاعب" Width="auto" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <!--<Border Width="10" Height="10" Margin="0 0 0 0" Background="{Binding IsSubscribed}" CornerRadius="50">
                                                        </Border>-->
                                                <TextBlock Margin="10 0 0 0"  FontSize="15"  Text="{Binding PlayerName}" VerticalAlignment="Center"/>
                                                <!--<TextBlock Margin="10 0 0 0" Text="{Binding SportName}"
                                                                  Foreground="#888" FontSize="13" VerticalAlignment="Center"/>-->
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="الاشتراك" IsReadOnly="True"
                                     Binding="{Binding SportName}"
                                    Width="auto"
                                    />
                                <DataGridTextColumn Header="الدفعة" IsReadOnly="True"
                                     Binding="{Binding PaymentValue}"
                                    Width="auto"
                                    />
                                <DataGridTextColumn Header="من تاريخ" IsReadOnly="True"
                                     Binding="{Binding CoveredFrom}"
                                    Width="auto"
                                    />


                                <DataGridTextColumn Header="الى تاريخ" IsReadOnly="True"
      Binding="{Binding CoveredTo}"
     Width="auto"
     />
                                <DataGridTextColumn Header="عدد الايام" IsReadOnly="True"
     Binding="{Binding Days}"
    Width="auto"
    />

                                <DataGridTextColumn Header="المستحق" IsReadOnly="True"
                                     Binding="{Binding AmountForMonth, StringFormat={}{0:C0}, ConverterCulture=ar-SY}"
                                    Width="auto"
                                    />
                                </DataGrid.Columns>
                            </DataGrid>

                        </Grid>
                    </DockPanel>
                    <!--#endregion-->
                </Border>

            </Grid>

    </Border>
</UserControl>
