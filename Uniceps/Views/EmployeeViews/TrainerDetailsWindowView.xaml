<Window x:Class="Uniceps.Views.EmployeeViews.TrainerDetailsWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views.EmployeeViews"
        mc:Ignorable="d"
             xmlns:con="clr-namespace:Uniceps.utlis.Converters"
  xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  xmlns:comp="clr-namespace:Uniceps.utlis.Components"
          
  xmlns:uc="clr-namespace:Uniceps.Components"
  xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
  FlowDirection="RightToLeft"
        Background="{DynamicResource Brush.Background}"
        WindowStartupLocation="CenterScreen"
        Title="اضافة مدرب" Height="600" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <con:NumberFormatConverter x:Key="convertNum"/>
    </Window.Resources>
    <Border CornerRadius="10"  Padding="10" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="2" Margin="0 0 0 5">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="العاملين / تسجيل مدرب" Foreground="{DynamicResource Brush.Foreground}" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>

                </DockPanel>
            </Border>


            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border  Grid.Column="1"  Grid.Row="0"  Style="{DynamicResource CardBorderStyle}"  Margin="10 0 0 0">
                    <DockPanel  >
                        <DockPanel DockPanel.Dock="Top" >
                            <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="معلومات المدرب " FontSize="24" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                                <TextBlock Text="اسم المدرب" 
                                   Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="0 0 0 8"
                                   FontSize="18"/>
                                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="0" Grid.Column="1" Margin="5">
                                <TextBlock Text="رقم الهاتف" Foreground="{DynamicResource Brush.Foreground}"
                                
                                   Margin="0 0 0 8"
                                   FontSize="18"/>
                                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="0" Grid.Column="2" Margin="5">
                                <TextBlock Text="سنة الميلاد" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="18"/>
                                <ComboBox Style="{DynamicResource ComboBoxStyle1}" 
                                          ItemsSource="{Binding Years,UpdateSourceTrigger=PropertyChanged}"
                                          SelectedItem="{Binding Year,UpdateSourceTrigger=PropertyChanged}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemContainerStyle1}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding year}" FontSize="12"   />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel  Grid.Row="1" Grid.Column="3" Margin="5">
                                <TextBlock Text="قيمة الراتب"  Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="0 0 0 8"
                                   FontSize="18"/>
                                <TextBox Text="{Binding SalaryValue, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="1" Grid.Column="1" Margin="5">
                                <TextBlock Text="النسبة %"  Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="0 0 0 8"
                                   FontSize="18"/>
                                <TextBox Text="{Binding ParcentValue, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="1" Grid.Column="0" Margin="5">
                                <TextBlock Text="المسمى الوظيفي" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="18"/>
                                <TextBox Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="5">
                                <TextBlock Text="تاريخ بداية العمل" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="18"/>
                                <!--<TextBox Text="{Binding SubscribeDate, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>-->
                                <DatePicker 
                                    SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}"
                                   />
                            </StackPanel>
                            <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="5">
                                <TextBlock Text="الجنس"  Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="0 0 0 8"
                                   FontSize="18"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Style="{StaticResource RadioChoose}" IsChecked="{Binding GenderMale}" >
                                        <RadioButton.Content>
                                            <!--<Border Padding="5" CornerRadius="10" BorderThickness="1" BorderBrush="#C14E00"> -->
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="FaceMan" Width="25" Height="25" />
                                                <TextBlock Text="ذكر"  TextAlignment="Center" FontSize="18" Margin="5 0"
                                                           FontWeight="Bold"/>
                                            </StackPanel>
                                            <!--</Border>-->


                                        </RadioButton.Content>
                                    </RadioButton>
                                    <RadioButton Style="{StaticResource RadioChoose}" IsChecked="True">
                                        <RadioButton.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="FaceWoman" Width="25" Height="25" />
                                                <TextBlock Text="انثى" TextAlignment="Center" FontSize="18" Margin="5 0"
                                                           FontWeight="Bold"/>
                                            </StackPanel>

                                        </RadioButton.Content>
                                    </RadioButton>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="2" Margin="20" HorizontalAlignment="Right">
                                <Button Command="{Binding SubmitCommand}" Style="{StaticResource FormButton}" Width="100" Grid.Column="0" Grid.Row="4"  Content="حفظ"  HorizontalAlignment="Right">
                                </Button>
                            </StackPanel>
                       
                        </Grid>

                    </DockPanel>
                </Border>

                <Border  Grid.Column="0"  Grid.Row="1"  Style="{DynamicResource StaticCardBorderStyle}"  >
                    <DockPanel>
                        <TextBlock  Text="الرياضات" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource Brush.Foreground}" Margin="0 0 0 5" DockPanel.Dock="Top"/>
                        <ListBox ItemsPanel="{DynamicResource ListBoxItemsPanel1}" 
                                 ItemContainerStyle="{StaticResource SportsItemContainerStyle1}"
                                 Style="{DynamicResource ListBoxStyle1}" DockPanel.Dock="Top"
                                 VirtualizingPanel.ScrollUnit="Pixel" BorderThickness="0"
                               ItemsSource="{Binding SportList}" >


                        </ListBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
