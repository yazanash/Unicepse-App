<Window x:Class="Uniceps.Views.SystemAuthViews.CreateProfileViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views.SystemAuthViews"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Brush.Background}"
          FlowDirection="RightToLeft"
        Title="معلومات العلامة التجارية" Height="450" Width="500">
    <Border >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border  Style="{DynamicResource CardBorderStyle}" Grid.Column="0"  Grid.Row="1"  >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"  VerticalAlignment="Top">

                        <StackPanel Orientation="Horizontal"  Margin="0 5">
                            <Border FlowDirection="LeftToRight" Grid.Column="0" HorizontalAlignment="Left"
    Margin="0 0 15 5"
Padding="5" VerticalAlignment="Top"
 BorderThickness="0" >

                                <Image Stretch="Uniform" Source="pack://application:,,,/Resources/Assets/Logo.png" 
            RenderOptions.BitmapScalingMode="HighQuality"
                        Height="50" Width="50"         RenderOptions.EdgeMode="Aliased"/>


                            </Border>
                            <StackPanel Width="350">
                               <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="هذه المعلومات تعتبر المعلومات التعريفية عن علامتك التجارية والتي ستظهر للاعبيين " TextWrapping="Wrap" FontSize="14"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1">
                        
                        <Grid Grid.Row="1" HorizontalAlignment="Center" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                                <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="اسم العلامة التجارية" 
Margin="0 0 0 8"
FontSize="18"/>
                                <TextBox Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                                <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="رقم التواصل" 
Margin="0 0 0 8"
FontSize="18"/>
                                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>


                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
                                <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="تاريخ الانشاء" 
Margin="0 0 0 8"
FontSize="18"/>
                                <!--<TextBox Text="{Binding SubscribeDate, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>-->
                                <DatePicker 
 SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}"
/>
                            </StackPanel>



                            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Margin="0 20 0 0" HorizontalAlignment="Center">
                                <Button Command="{Binding CreateProfileCommand}" Style="{StaticResource FormButton}" Width="200" Grid.Column="0" Grid.Row="4"  Content="حفظ"  HorizontalAlignment="Right">
                                </Button>
                            </StackPanel>

                        </Grid>

                    </Border>

                </Grid>

            </Border>


        </Grid>
    </Border>
</Window>
