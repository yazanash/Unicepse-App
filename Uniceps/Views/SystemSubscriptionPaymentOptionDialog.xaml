<Window x:Class="Uniceps.Views.SystemSubscriptionPaymentOptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps.Views"
        mc:Ignorable="d"
        xmlns:Icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Background="{DynamicResource Brush.Background}"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        Title="خيارات الدفع" Height="400" Width="400">
    <Grid>
        <Border Style="{DynamicResource CardBorderStyle}">
            <StackPanel>
                <Grid>
                    
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock  Margin="0 0 0 5" Text="تم تسجيل الاشتراك بنجاح " Foreground="{DynamicResource Brush.Foreground}"
              FontSize="18"/>
                        <TextBlock Text="اختر طريقة الدفع" Foreground="{DynamicResource Brush.Foreground}"
FontSize="16"/>
                    </StackPanel>
                    <Image Source="/Resources/Assets/CaptinUni/CaptinTablet.png" HorizontalAlignment="Right" Height="200" Width="200"/>
                </Grid>
               
                <StackPanel Margin="0 10 0 0" Orientation="Vertical">
                    <Button IsEnabled="{Binding CanCardExecute}" Command="{Binding PayWithCardCommand}" Margin="5" Style="{DynamicResource FormButton}"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Icons:PackIconMaterial Kind="CreditCardCheckOutline" VerticalAlignment="Center" Width="30" Height="30"/>
                            <TextBlock Text="الدفع عن طريق البطاقة" Margin="10 0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding PayWithCashCommand}" Margin="5" Style="{DynamicResource FormButton}"  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Icons:PackIconMaterial Kind="CashMultiple" VerticalAlignment="Center" Width="30" Height="30"/>
                            <TextBlock Text="الدفع عن طريق الكاش" Margin="10 0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        
        </Border>
        
    </Grid>
</Window>
