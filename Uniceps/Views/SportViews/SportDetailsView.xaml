<UserControl x:Class="Uniceps.Views.SportViews.SportDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.Views.SportViews"
               xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
             mc:Ignorable="d" 
                xmlns:con="clr-namespace:Uniceps.utlis.Converters"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:comp="clr-namespace:Uniceps.utlis.Components"
              FlowDirection="RightToLeft"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:uc="clr-namespace:Uniceps.Components"
                   xmlns:converters="clr-namespace:Uniceps.utlis.Converters"
             d:DesignHeight="450" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:NumberFormatConverter x:Key="convertNum"/>
    </UserControl.Resources>
    <Border  Padding="10" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="2" Margin="0 0 0 5" >
                <DockPanel>
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="الرياضات / اضافة رياضة" FontSize="18" VerticalAlignment="Center" Foreground="{DynamicResource Brush.Foreground}"/>
                    </StackPanel>

                </DockPanel>
            </Border>


            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border  Grid.Column="1"  Grid.Row="0" HorizontalAlignment="Left" Style="{DynamicResource CardBorderStyle}" Margin="5">
                    <DockPanel HorizontalAlignment="Left"  Width="800">
                        <DockPanel DockPanel.Dock="Top" >
                            <TextBlock Text="معلومات الرياضة " Foreground="{DynamicResource Brush.Foreground}" FontSize="24" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                                <TextBlock Text="اسم الرياضة" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="13"/>
                                <TextBox Text="{Binding SportName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="0" Grid.Column="1" Margin="5">
                                <TextBlock Text="الاشتراك الشهري" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="13"/>
                                <TextBox Text="{Binding MonthlyPrice, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="1" Grid.Column="2" Margin="5">
                                <TextBlock Text="الاشتراك اليومي" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="13"/>
                                <TextBox Text="{Binding DailyPrice, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>

                            <StackPanel  Grid.Row="2" Grid.Column="3" Margin="5">
                                <TextBlock Text=" عدد ايام التدريب في الاسبوع" 
                                   Margin="0 0 0 8" Foreground="{DynamicResource Brush.Foreground}"
                                   FontSize="13"/>
                                <TextBox Text="{Binding WeeklyTrainingDays, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>
                            <StackPanel  Grid.Row="1" Grid.Column="0" Margin="5">
                                <TextBlock Text="مدة الاشتراك"  Foreground="{DynamicResource Brush.Foreground}"
                                   Margin="0 0 0 8"
                                   FontSize="13"/>
                                <TextBox Text="{Binding SubscribeLength, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource textBoxStyle}"/>

                            </StackPanel>



                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="0 20 0 0" HorizontalAlignment="Right">
                                <Button Command="{Binding SubmitCommand}" Style="{StaticResource FormButton}" Width="200" Grid.Column="0" Grid.Row="4"   Content="حفظ"  HorizontalAlignment="Right">
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Margin="0 20 0 0" HorizontalAlignment="Left">
                                <Button Command="{Binding CancelCommand}" Style="{StaticResource ScFormButton}" Width="200"  Content="الغاء"/>
                            </StackPanel>
                        </Grid>

                    </DockPanel>
                </Border>

                <Border  Grid.Column="0"  Grid.Row="1" Style="{DynamicResource CardBorderStyle}"  Margin="5">
                    <DockPanel>
                        <TextBlock Foreground="{DynamicResource Brush.Foreground}" Text="المدربين" FontSize="18" FontWeight="Bold" Margin="0 0 0 5" DockPanel.Dock="Top"/>
                        <ListBox ItemsPanel="{DynamicResource ListBoxItemsPanel1}" BorderThickness="0" ItemContainerStyle="{DynamicResource TrainersItemContainerStyle1}" Style="{DynamicResource ListBoxStyle1}" DockPanel.Dock="Top" BorderBrush="#fff" ItemsSource="{Binding TrainerList}" >

                          
                        </ListBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>




</UserControl>
