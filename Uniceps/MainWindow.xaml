<Window x:Class="Uniceps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uniceps"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:View="clr-namespace:Uniceps.Views.AuthView"
        xmlns:vms="clr-namespace:Uniceps.ViewModels"
        xmlns:controls="clr-namespace:Uniceps.Controls"
        xmlns:nav="clr-namespace:Uniceps.navigation.Navigator" xmlns:views="clr-namespace:Uniceps.Views"
        
             xmlns:comp="clr-namespace:Uniceps.utlis.Components"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
        Title="Unicepse - Release" Height="720" Width="1080">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <!--<Border Background="#fff"
           
            Padding="5 10"
            CornerRadius="10">
        --><!--<views:HomeView/>--><!--
  
        <ContentControl Content="{Binding CurrentViewModel}" Grid.ColumnSpan="2"/>
    </Border>-->
    <Border Background="#fff"
            
            Padding="0 0"
            CornerRadius="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <!--Top Menu-->
            <Border Grid.ColumnSpan="2" Visibility="{Binding IsExpired,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BoolToVis}}" Padding="5" Grid.Row="0" Background="#ed4337">
                <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Foreground="white" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="انتهت مدة الاشتراك يرجى تجديد الاشتراك خلال "/>
                    <TextBlock Foreground="white" Margin="5 0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding DaysLeft,UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Foreground="white" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="ايام"/>
                </StackPanel>
            </Border>
            <!--left Menu-->
            <controls:NavBar  Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" DataContext="{Binding Navigator}" />
            <!--<controls:HeaderBar Grid.Column="0" Grid.Row="0"   DataContext="{Binding Navigator}" />-->
            <!--<controls:NavBar Grid.Row="1" DataContext="{Binding Navigator}" Grid.Column="1"/>-->
            <!--MenuSection-->

            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--Search textbox-->




                <!--top button-->


                <!--<Separator Height="1"
                   Background="#dae2ea" Margin="10 10"
                   Grid.Row="1"/>-->
                <!--<View:HomeView Grid.Row="1" DataContext="{Binding CurrentViewModel}"/>-->
               
                <Border Padding="10 0" Grid.Row="1">
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <ContentControl Content="{Binding Navigator.CurrentViewModel}" Grid.ColumnSpan="2"/>
                        <comp:StatusBar Grid.Row="2" DataContext="{Binding StatusBarViewModel,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right"/>

                    </Grid>
                    <!--#endregion-->
                </Border>

            </Grid>

        </Grid>
    </Border>
</Window>
