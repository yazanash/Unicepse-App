<UserControl x:Class="Uniceps.utlis.Controls.UserSettingsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Controls"
             mc:Ignorable="d" 
             Background="White"
             FlowDirection="RightToLeft"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Border Background="White" CornerRadius="15" Width="220" Margin="5" Padding="10 5">
        <!--<Border.Effect>
            <DropShadowEffect BlurRadius="5" ShadowDepth="0.5"/>
        </Border.Effect>-->

        <StackPanel Orientation="Vertical" >
            <Border Width="100" Background="{StaticResource colors.primary}"
                    CornerRadius="50" Height="100" Margin="5" HorizontalAlignment="Center">
                <icon:PackIconMaterial Width="60" Height="60" Foreground="#fff" Kind="Account" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>

            <TextBlock  Text="yazan.ash" FontSize="22" TextWrapping="Wrap" Margin="5" HorizontalAlignment="Center" Foreground="{StaticResource colors.secondry}"/>
            <TextBlock  Text="yazan abo shash" FontSize="15" TextWrapping="Wrap" Margin="5" HorizontalAlignment="Center" Foreground="{StaticResource colors.primary}"/>
            <TextBlock  Text="Coach" FontSize="15" TextWrapping="Wrap" Margin="5" HorizontalAlignment="Center" Foreground="{StaticResource colors.primary}"/>
            <Separator Background="#ccc"  Margin="10 10"/>
            <StackPanel>
                <Border Background="#eee" CornerRadius="10" Margin="5" Padding="10 5">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="رقم الهاتف" FontSize="12" Foreground="{StaticResource colors.primary}"/>
                        <TextBlock Text="+9639960606"  FontSize="13" Foreground="#384756"/>
                    </StackPanel>
                </Border>
                <Border Background="#eee" CornerRadius="10" Margin="5" Padding="10 5">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="الجنس" FontSize="14" Foreground="{StaticResource colors.primary}"/>
                        <TextBlock Text="ذكر" FontSize="14" Foreground="#384756"/>
                    </StackPanel>
                </Border>
                <Border Background="#eee" CornerRadius="10" Margin="5" Padding="10 5">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="سنة الميلاد" FontSize="14" Foreground="{StaticResource colors.primary}"/>
                        <TextBlock Text="1999" FontSize="14" Foreground="#384756"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
