<UserControl x:Class="Uniceps.utlis.Controls.TopNavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Controls"
             mc:Ignorable="d" 
                 xmlns:nav="clr-namespace:Uniceps.navigation.Navigator"
              xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                   FlowDirection="RightToLeft">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Border Grid.Row="1" BorderBrush="#ddd" BorderThickness="0 1 1 1" Background="{StaticResource ResourceKey=colors.background.white}" Padding="5">
       
        <DockPanel >
            <!--Logo-->

            <StackPanel  DockPanel.Dock="Left" Orientation="Horizontal"  Grid.Column="0" >


                <Border FlowDirection="LeftToRight"
                        Margin="0 0 15 5"
                    Padding="5"
                     BorderThickness="0" >

                    <Image Stretch="Fill" Source="../../Resources/Assets/logo.png" 
                                RenderOptions.BitmapScalingMode="HighQuality"
                            Width="30"  Height="30"
                                                     RenderOptions.EdgeMode="Aliased"/>


                </Border>
                <TextBlock DockPanel.Dock="Top"
                               Foreground="{StaticResource colors.secondry}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               TextAlignment="Center"
                           VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                               Text="Uniceps" />
            </StackPanel>

        </DockPanel>
    </Border>
</UserControl>
