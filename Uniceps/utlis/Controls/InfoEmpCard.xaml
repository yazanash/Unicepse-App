<UserControl x:Class="Uniceps.utlis.Controls.InfoEmpCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Controls"
             mc:Ignorable="d" 
             FlowDirection="RightToLeft"
             xmlns:converters="clr-namespace:Uniceps.utlis.Converters"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <UserControl.Resources>
        <converters:NumberFormatConverter x:Key="convertNum"/>
    </UserControl.Resources>
    <Border  Style="{DynamicResource StaticCardBorderStyle}"  Width="220">
        <!--<Border.Effect>
            <DropShadowEffect BlurRadius="5" ShadowDepth="0.5"/>
        </Border.Effect>-->

        <StackPanel Orientation="Vertical" >
            <Button HorizontalAlignment="Left" Command="{Binding EditCommand}"  FlowDirection="LeftToRight"  Style="{StaticResource EditBtn}">

                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="تعديل"  VerticalAlignment="Center"/>
                    <icon:PackIconMaterial Kind="Pen"
                                       Width="11"
                                       Height="11"
                                       Margin="8 0 0 0"
                                       VerticalAlignment="Center"/>
                </StackPanel>

            </Button>

            <Border Width="60" Background="{DynamicResource Brush.Primary}" CornerRadius="50" Height="60" Margin="5" HorizontalAlignment="Center">
                <icon:PackIconMaterial Width="40" Height="40" Foreground="{DynamicResource Brush.OnPrimary}" Kind="Account" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>
            <TextBlock  Text="{Binding FullName}" Foreground="{DynamicResource Brush.Foreground}" FontSize="15" TextWrapping="Wrap" Margin="5" HorizontalAlignment="Center" />
            <StackPanel>
                <Border  Style="{DynamicResource CardBorderStyle}" Margin="5" Padding="10 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="رقم الهاتف" FontSize="12" Foreground="{DynamicResource Brush.Primary}"/>
                        <TextBlock Text="{Binding Phone}"  FontSize="13" Foreground="{DynamicResource Brush.Foreground}"/>
                    </StackPanel>
                </Border>
                <Border Style="{DynamicResource CardBorderStyle}" Margin="5" Padding="10 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="الجنس" FontSize="14" Foreground="{DynamicResource Brush.Primary}"/>
                        <TextBlock Text="{Binding Gendertext}" FontSize="14" Foreground="{DynamicResource Brush.Foreground}"/>
                    </StackPanel>
                </Border>
                <Border Style="{DynamicResource CardBorderStyle}" Margin="5" Padding="10 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="سنة الميلاد" FontSize="14" Foreground="{DynamicResource Brush.Primary}"/>
                        <TextBlock Text="{Binding BirthDate}" FontSize="14" Foreground="{DynamicResource Brush.Foreground}"/>
                    </StackPanel>
                </Border>
                <Border Style="{DynamicResource CardBorderStyle}" Margin="5" Padding="10 0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="تاريخ الاشتراك" FontSize="14" Foreground="{DynamicResource Brush.Primary}"/>
                        <TextBlock Text="{Binding SubscribeDate}" FontSize="14" Foreground="{DynamicResource Brush.Foreground}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <Button HorizontalAlignment="Center"  Command="{Binding DeleteCommand}"  FlowDirection="LeftToRight"  Style="{StaticResource DeleteBtn}">

                <StackPanel Orientation="Horizontal">

                    <TextBlock Text="حذف الحساب"  VerticalAlignment="Center"/>
                    <icon:PackIconMaterial Kind="TrashCan"
                                       Width="11"
                                       Height="11"
                                       Margin="8 0 0 0"
                                           Foreground="#fff"
                                       VerticalAlignment="Center"/>
                </StackPanel>

            </Button>
        </StackPanel>
    </Border>
</UserControl>
