<UserControl x:Class="Uniceps.utlis.Components.NotificationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Components"
             mc:Ignorable="d" 
             xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks"
            >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>
    <Border  Style="{DynamicResource CardBorderStyle}" Padding="5 0">
        <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <icons:PackIconMaterial Kind="Alert" Width="25" Height="25" Foreground="Yellow" VerticalAlignment="Center"/>
            <TextBlock 
             FontWeight="Bold" Margin="10 0"
             HorizontalAlignment="Left" Foreground="{DynamicResource Brush.Foreground}"
             VerticalAlignment="Center"  FontSize="12"
             Text="{Binding Notification,UpdateSourceTrigger=PropertyChanged}"/>
            <Button Style="{StaticResource IconBtn}" Margin="10 0" Content="{Binding ActionTitle}" Command="{Binding NotificationCommand}"/>

        </StackPanel>
    </Border>
</UserControl>
