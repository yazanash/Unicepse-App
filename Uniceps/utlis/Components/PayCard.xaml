<UserControl x:Class="Uniceps.utlis.Components.PayCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" >
    <Border Background="Transparent" CornerRadius="10" Padding="10">
        <Border Background="#fff" BorderBrush="#787878" Width="300" BorderThickness="1" Padding="10" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="TrainerName" Margin="0 5 0 10" Grid.Row="0" FontSize="15" MaxHeight="30" LineStackingStrategy="BlockLineHeight" TextWrapping="WrapWithOverflow" TextTrimming="CharacterEllipsis" FontWeight="Bold" Foreground="{StaticResource colors.primary}"/>
                <TextBlock Text="150,000"  Margin="0 5" Grid.Row="1" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource colors.primary}"/>
                <TextBlock Text="11 / 11 / 1999 " Margin="0 5" Grid.Row="1" Grid.Column="1" FontSize="12" FontWeight="SemiBold" Foreground="#787878"/>
                <TextBlock Text="Description" Margin="0 5 0 3" Grid.Row="2" Grid.Column="0" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource colors.primary}"/>
                <TextBlock Height="60" Margin="0 5" Grid.ColumnSpan="2" TextWrapping="WrapWithOverflow" Text="Lorem ipsum dolor sit amet consectetur, adipisicing elit. Deleniti vitae dolores at nostrum distinctio, exercitationem, eos magni delectus iste dolorum optio impedit quis fugiat, blanditiis natus voluptatum suscipit modi! Dignissimos?" Grid.Row="3" Grid.Column="0" FontSize="11" Foreground="#787878"/>
            </Grid>
        </Border>
       
    </Border>
</UserControl>
