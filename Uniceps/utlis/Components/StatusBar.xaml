<UserControl x:Class="Uniceps.utlis.Components.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Components"
              xmlns:custom="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
          FlowDirection="RightToLeft"   mc:Ignorable="d" >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </UserControl.Resources>
    <Border Style="{DynamicResource StaticCardBorderStyle}" Padding="10 0" >
    <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>

            </Grid.ColumnDefinitions>
            <StackPanel Margin="5 0" Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="اسم المستخدم : " FontSize="12" Margin="0 0 5 0" Foreground="{DynamicResource Brush.Foreground}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding UserName,UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>
            <StackPanel Margin="5 0" Orientation="Horizontal" Grid.Column="1">
                <TextBlock Text="مالك الحساب : " FontSize="12" Margin="0 0 5 0" Foreground="{DynamicResource Brush.Foreground}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding OwnerName,UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>

            <StackPanel Margin="5 0" Orientation="Horizontal" Grid.Column="2">
                <TextBlock Text="الوظيفة : " FontSize="12" Foreground="{DynamicResource Brush.Foreground}" Margin="0 0 5 0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Position,UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="5 0" Grid.Column="3">
                <Border Background="{Binding Connection,UpdateSourceTrigger=PropertyChanged}" Width="7" VerticalAlignment="Center" Height="7" Margin="0 0 5 0" CornerRadius="50"/>
                <TextBlock Text="{Binding BackMessage,UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Foreground="{DynamicResource Brush.Foreground}" />
            </StackPanel>
            <StackPanel Visibility="{Binding SyncState ,Converter={StaticResource boolToVis}}" Orientation="Horizontal" Margin="5 0" Grid.Column="4">
                <TextBlock Text="{Binding SyncMessage, UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource Brush.Foreground}" FontSize="12" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <ProgressBar IsIndeterminate="{Binding SyncState}" Height="3" Width="100" Foreground="{DynamicResource Brush.Primary}" Background="#fff"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
