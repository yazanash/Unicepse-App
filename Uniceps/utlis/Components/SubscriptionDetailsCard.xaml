<UserControl x:Class="Uniceps.utlis.Components.SubscriptionDetailsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Components"
             xmlns:con="clr-namespace:Uniceps.utlis.Converters"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
        <con:NumberFormatConverter x:Key="convertNum"/>
    </UserControl.Resources>

    <Border Style="{DynamicResource CardBorderStyle}" Padding="5"  Margin="5">
        <DockPanel >
            <TextBlock FontSize="18"  Text="معلومات الاشتراك" Foreground="{DynamicResource Brush.Foreground}"  DockPanel.Dock="Top"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Foreground="{DynamicResource Brush.Foreground}"  Text="{Binding SportName,UpdateSourceTrigger=PropertyChanged}" FontSize="18" FontWeight="SemiBold" Margin="5" />
                <TextBlock Foreground="{DynamicResource Brush.Foreground}"  Text="{Binding Trainer,UpdateSourceTrigger=PropertyChanged}" Margin="5" FontSize="16"/>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  Text="{Binding RollDate}"  FontSize="14"/>
                    <Separator Width="10" Margin="10 0" Background="{DynamicResource Brush.Border}"/>
                    <TextBlock Text="{Binding EndDate}" Foreground="{DynamicResource Brush.Foreground}"  FontSize="14"/>
                </StackPanel>
                <DockPanel Margin="5">
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  HorizontalAlignment="Center" Text="{Binding DaysCount,UpdateSourceTrigger=PropertyChanged}" FontSize="18" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  Text="عدد ايام الاشتراك" VerticalAlignment="Center"  FontSize="16" DockPanel.Dock="Left"/>
                </DockPanel>

                <DockPanel Margin="5">
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  HorizontalAlignment="Center" Text="{Binding PriceAfterOffer,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" FontSize="18" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  Text="الاجمالي" VerticalAlignment="Center"  FontSize="16" DockPanel.Dock="Left"/>
                </DockPanel>
                <DockPanel Margin="5">
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  HorizontalAlignment="Center"  Text="{Binding PaidValue,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource convertNum}}" FontSize="18" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    <TextBlock Foreground="{DynamicResource Brush.Foreground}"  Text="المدفوع"  VerticalAlignment="Center"  FontSize="16" DockPanel.Dock="Left"/>
                </DockPanel>
            </StackPanel>

        </DockPanel>

    </Border>
</UserControl>
