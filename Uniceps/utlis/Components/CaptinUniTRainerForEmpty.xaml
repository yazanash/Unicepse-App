<UserControl x:Class="Uniceps.utlis.Components.CaptinUniTRainerForEmpty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uniceps.utlis.Components"
             mc:Ignorable="d" 
                     x:Name="CaptinTrainerUniEmpty"
             Background="{DynamicResource Brush.Background}"
         FlowDirection="RightToLeft"
        >
    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" BorderThickness="0" Padding="10" >
            <Grid HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" Width="150">
                    <TextBlock FontSize="14" Margin="0 0 0 10" TextWrapping="Wrap" Foreground="{DynamicResource Brush.Foreground}" Text="{Binding ElementName=CaptinTrainerUniEmpty, Path=Title}"/>
                    <TextBlock FontSize="12" Foreground="{DynamicResource Brush.Foreground}" TextWrapping="Wrap" Text="{Binding ElementName=CaptinTrainerUniEmpty, Path=Caption}"/>
                </StackPanel>
                <Image Grid.Row="1" Source="/Resources/Assets/CaptinUni/CaptinUp.png" Height="150" Width="150" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
