<UserControl x:Class="Unicepse.utlis.Components.ExerciseCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Unicepse.utlis.Components"
             mc:Ignorable="d" 
             >
    <Border BorderThickness="1" BorderBrush="#aaa" Margin="5" Padding="5" CornerRadius="10" Background="#fff">
        <DockPanel >
            <Image Width="150"
                   Source="pack://application:,,,/Resources/Assets/Exercises/9.png"
                    RenderOptions.BitmapScalingMode="HighQuality"
       RenderOptions.EdgeMode="Aliased"
                   Height="100" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                <TextBlock Text="اسم التمرين" Margin="0 0 0 5" HorizontalAlignment="Left" FontSize="16" />
                <TextBlock Text="ملاحظات" HorizontalAlignment="Left" FontSize="16" Foreground="#999"/>
            </StackPanel>
        </DockPanel>
    </Border>
</UserControl>
